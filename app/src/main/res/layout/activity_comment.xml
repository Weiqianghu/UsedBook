<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiqianghu.usedbook.view.activity.CommentActivity">

    <include layout="@layout/top_bar"></include>

    <include layout="@layout/item_shopping_cart_order"></include>

    <EditText
        android:id="@+id/et_comment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/box_bg"
        android:gravity="top"
        android:hint="@string/recomend_comment"
        android:maxLength="100"
        android:textColor="@color/textColor" />

    <include layout="@layout/comment_bottom_bar" />

    <FrameLayout
        android:id="@+id/emoji_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>

</LinearLayout>
