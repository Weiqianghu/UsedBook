<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_book_img"
        android:layout_width="@dimen/xlarge_dp"
        android:layout_height="@dimen/xlarge_dp"
        android:layout_centerHorizontal="true"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@mipmap/upload_img" />


    <TextView
        android:id="@+id/tv_item_book_price"
        style="@style/book_price_style"
        android:layout_below="@+id/iv_item_book_img"
        android:layout_centerHorizontal="true"
        android:text="20￥" />

    <TextView
        android:id="@+id/tv_item_book_percent"
        style="@style/book_percent_style"
        android:layout_below="@+id/tv_item_book_price"
        android:layout_centerHorizontal="true"
        android:maxLength="3"
        android:text="八成新" />


    <TextView
        android:id="@+id/tv_item_book_name"
        style="@style/book_name_style"
        android:layout_below="@+id/tv_item_book_percent"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="计算机文化" />


    <TextView
        android:id="@+id/tv_item_book_shop"
        style="@style/book_shop_style"
        android:layout_below="@+id/tv_item_book_name"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="UB二手书城" />

</RelativeLayout>